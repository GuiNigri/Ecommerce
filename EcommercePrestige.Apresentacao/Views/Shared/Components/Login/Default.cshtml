@model EcommercePrestige.Application.ViewModel.LoginViewModel

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{

    <li class="header-account dropdown default-dropdown">
        <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
            <div class="header-btns-icon">
                <i class="fa fa-user-o"></i>
            </div>
            <strong class="text-uppercase">@Model.NomeUsuario <i class="fa fa-caret-down"></i></strong>
        </div>
        <ul class="custom-menu" style="margin-top: 5px; text-align: left;">
            @if (Model.Admin)
            {
                <li><a asp-controller="Administracao" asp-action="Index"><i class="fa fa-cogs"></i> Administração</a></li>
            }
            <li><a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa fa-user-o"></i> Minha Conta</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Manage/Pedidos"><i class="fa fa-check"></i> Meus Pedidos</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})"><i class="fa fa-user-circle"></i> Sair da conta</a></li>
        </ul>
    </li>
}
else
{ 
    <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" class="text-uppercase" style="margin-left: 15px;"><i class="fa fa-user-plus"></i> Cadastrar </a>  
    <a asp-area="Identity" asp-page="/Account/Login" class="text-uppercase" style="margin-left: 15px;" ><i class="fa fa-unlock-alt"></i> Logar</a>

}