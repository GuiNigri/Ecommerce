@model EcommercePrestige.Application.ViewModel.EmpresaViewModel
@{
    Layout = "_LayoutAdm";
}

<div class="card shadow mb-4">
    <partial name="ModelStatusPartial" model="@Model.StatusModel" />
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Empresa</h6>
    </div>
    <div class="card-body">
        <form asp-controller="Empresa" asp-action="Edit" method="post">
            <div class="form-group row">
                <input type="hidden" asp-for="UserId"/>
                <div class="col-md-2">
                    <label class="control-label" asp-for="Cnpj">CNPJ</label>
                    <input class="form-control" asp-for="Cnpj" readonly/>
                </div>
                <div class="col-md-5">
                    <label class="control-label" asp-for="RazaoSocial">Razão Social</label>
                    <input type="text" class="form-control" asp-for="RazaoSocial"/>
                </div>
                <div class="col-md-3">
                    <label class="control-label" asp-for="NomeOtica">Nome da otica</label>
                    <input type="text" class="form-control" asp-for="NomeOtica"/>
                </div>
                <div class="col-md-2">
                    <label class="control-label" asp-for="Cnae">CNAE</label>
                    <input type="text" class="form-control" asp-for="Cnae"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label" asp-for="Telefone">Telefone</label>
                    <input type="text" class="form-control" asp-for="Telefone"/>
                </div>
                <div class="col-md-2">
                    <label class="control-label" asp-for="Cep">CEP</label>
                    <input type="text" class="form-control" asp-for="Cep"/>
                </div>
                <div class="col-md-3">
                    <label class="control-label" asp-for="Logradouro">Logradouro</label>
                    <input type="text" class="form-control" asp-for="Logradouro"/>
                </div>
                <div class="col-md-1">
                    <label class="control-label" asp-for="Numero">Numero</label>
                    <input type="text" class="form-control" asp-for="Numero"/>
                </div>
                <div class="col-md-2">
                    <label class="control-label" asp-for="Complemento">Complemento</label>
                    <input type="text" class="form-control" asp-for="Complemento"/>
                </div>
                <div class="col-md-2">
                    <label class="control-label" asp-for="Bairro">Bairro</label>
                    <input type="text" class="form-control" asp-for="Bairro"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label" asp-for="Municipio">Municipio</label>
                    <input type="text" class="form-control" asp-for="Municipio"/>
                </div>
                <div class="col-md-1">
                    <label class="control-label" asp-for="Uf">UF</label>
                    <input type="text" class="form-control" asp-for="Uf"/>
                </div>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Salvar</button>
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Edit","Usuario", new {userId=Model.UserId})'"> Acessar usuario vinculado</button>
            </div>
        </form>
    </div>
</div>
