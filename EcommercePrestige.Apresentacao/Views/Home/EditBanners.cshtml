@model EcommercePrestige.Application.ViewModel.BannersHomeViewModel
@{
    Layout = "_LayoutAdm";
}

<div class="card shadow mb-4">
    <partial name="ModelStatusPartial" model="@Model.StatusModel" />
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Banners</h6>
    </div>
    <div class="card-body">
        <form asp-controller="Home" asp-action="AdicionarBanner" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <div class="col-md-6" style="align-self: flex-end;">
                    <label class="control-label" asp-for="UrlBanner"> Banner</label>
                    <input type="file" class="custom-file" name="banner" />
                </div>
                <div class="col-md-2" style="align-self: flex-end;">
                    <br />
                    <button type="submit" class="btn btn-success form-control"> Adicionar</button>
                </div>
            </div>
        </form>
        <div class="table-responsive">
            <table style="width: 50%" class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Banner</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model.Banners.Any())
                        {
                            foreach (var item in Model.Banners)
                            {
                                <tr>
                                    <td class="text-center">
                                        @item.Id
                                    </td>
                                    <td class="text-center">
                                        <img src="@item.UrlBanner" width="80px" height="80px"/>
                                    </td>
                                    <td class="text-center" style="text-align: center"><button class="btn btn-danger" onclick="location.href = '@Url.Action("RemoverBanner", "Home", new {id = @item.Id})'"><i class="fas fa-trash"></i></button></td>
                                </tr>
                            }
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
