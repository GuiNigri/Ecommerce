@model EcommercePrestige.Application.ViewModel.KitsViewModel

@{
    Layout = "_LayoutAdm";
}

    <div class="card shadow mb-4">
        <partial name="ModelStatusPartial" model="@Model.StatusModel" />
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kit</h6>
        </div>
        <div class="card-body">
            <form asp-controller="Kits" asp-action="Edit" method="post">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="control-label" asp-for="Nome"> Nome</label>
                        <input type="text" class="form-control" asp-for="Nome" />
                    </div>
                    <div class="col-md-4">
                        <label class="control-label" asp-for="ValorVenda"> Valor</label>
                        <input type="text" class="form-control" asp-for="ValorVenda" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" asp-for="Descricao"> Descrição</label>
                        <textarea  class="form-control" asp-for="Descricao"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary"> Salvar</button>
                </div>
            </form>
        </div>
    </div>