@model EcommercePrestige.Application.ViewModel.UsuarioCreateViewModel

@{
    Layout = "_LayoutAdm";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Criar Usuario</h6>
    </div>
    <div class="card-body">
        <form asp-controller="Usuario" asp-action="Create" method="post">
            <div class="form-group row">
                <div class="col-md-4">
                    <label class="control-label" asp-for="Usuario.NomeCompleto"></label>
                    <input class="form-control" asp-for="Usuario.NomeCompleto"/>
                </div>
                <div class="col-md-4">
                    <label class="control-label" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email"/>
                </div>
                <div class="col-md-4">
                    <label class="control-label" asp-for="Celular">Celular </label>
                    <input class="form-control" asp-for="Celular"/>
                </div>
            </div>
            <p>Status Usuario</p>
            <div class="form-group row">
                <div class="col-md-3">
                    <input type="checkbox" asp-for="Usuario.Administrador" data-val="true" and value="true" />
                    <label class="control-label">Administrador</label>
                </div>
                <div class="col-md-3">
                    <input type="checkbox" asp-for="Usuario.BloqueioManual" data-val="true" and value="true" />
                    <label class="control-label">Bloqueado</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>
